  <!-- Additional library for page -->
  <style>
    .img-logo {
      border-radius: 100px;
      width: 110px;
    }

    .wrapper {
      background-color: #fff;
    }

    .login-left {
      width: 100%;
      height: 100vh;
    }

    .login-right {
      width: 100%;
      height: 100vh;
      background-image: url(/assets/img/img-dmmy.jpg);
      background-size: cover;
    }

    .login-form-container {
      width: 300px;
      height: auto;
      background-color: #fff;
      padding: 20px;
      position: absolute;
      top: 50%;
      left: 50%;
      border-radius: 3px;
      /* box-shadow: 0 1px 6px 0 rgba(32, 33, 36, 0.28); */
      transform: translate(-50%, -50%);
    }

    .login-form-container h2 {
      font-size: 20px;
      font-weight: 100;
      text-align: center;
      margin-bottom: 30px;
      color: #8b8b8b;
    }

    .login-form-img-container {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .login-form-img-container img {
      margin-bottom: 35px;
    }

    .form-group input {
      height: 45px;
      margin: 3px 0 3px 0;
    }

    .link {
      display: block;
      padding: 10px;
      margin-top: 10px;
      text-align: center;
      font-size: 14px;
    }

    .credentail-cont {
      position: absolute;
      top: 30%;
      right: 10%;
      opacity: 0.8;
      padding: 10px;
      border: 1px solid #ddd;
      background: #fffefe;
    }

    .btn-orange {
      background-color: #fb5c31;
      color: #fff;
    }

    .btn-height {
      height: 45px;
    }

    .btn-orange:hover {
      background-color: #ff7c58;
      color: #fff;
    }

    .or {
      text-align: center;
      position: relative;
    }

    .or::before {
      content: "";
      position: absolute;
      top: 50%;
      left: 0;
      width: 40%;
      height: 1px;
      background-color: rgb(209, 209, 209);
    }

    .or::after {
      content: "";
      position: absolute;
      top: 50%;
      right: 0;
      width: 40%;
      height: 1px;
      background-color: rgb(209, 209, 209);
    }

    #customBtn {
      display: inline-block;
      background: white;
      color: #444;
      width: 260px;
      height: 45px;
      border-radius: .25rem;
      border: thin solid #888;
      white-space: nowrap;
    }

    .g-signin2 {
      width: 100%;
    }

    .g-signin2>div {
      margin: 0 auto;
      border-radius: .25rem;
    }

    .forgot-pass {
      color: #FB5C31;
    }

    .forgot-pass:hover {
      text-decoration: underline;
      color: #FB5C31;
    }

    .error_message {
      color: red;
    }

    #toast-container>.toast-success {
      background-color: green;
      /* max-width: 70%;
        padding: 1em;
        margin-bottom: .4em; */
      /* white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis; */
    }

<body class="jumbo-page">
  <main class="admin-main">
    <div class="container-fluid">
      <%- include ../partials/message.ejs %>
        <div class="row wrapper">
          <div class="col-md-12 col-sm-12">
            <div class="login-left">
              <div class="login-form-container">
               

                <h2>Sign in</h2>
                <form class="add-cause-form" id="login_page" action="/homePage" method="POST"
                  enctype="multipart/form-data">
                  <div class="form-row">
                    <div class="form-group col-md-12 error_message">
                      <input autoComplete="off" id="email" name="email" placeholder="Email" type="text"
                        class="form-control" onChange="" />
                    </div>
                    <div class="form-group col-md-12 error_message">
                      <input autoComplete="off" name="password" placeholder="Password" type="password"
                        class="form-control" />
                    </div>
                  </div>
                  <button type="submit" class="btn btn-orange btn-height btn-block my-3">
                    Sign in
                  </button>

                  <a href="/signup" class="link">
                    Create new acount? Sign up here
                  </a>
                 
                </form>
              </div>
            </div>
          </div>
    
        </div>
        
    </div>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
